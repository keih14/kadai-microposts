<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.favorites.find_by(favorite_id: user.favorites.ids), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, user.favorites.ids %>
      <%= f.submit 'UnFavor', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, user.favorites.ids %>
      <%= f.submit 'Favor', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>